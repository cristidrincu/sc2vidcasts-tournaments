<% include ../partials/header.ejs %>
<div class="container container-details-profile">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title"><%=detailedUser.local.nickname%></h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center">
                            <%userAvatar.local.avatar.forEach(function(avatar){%>
                                <img alt="User Pic" src="../..<%= avatar.imagePath + '/' + avatar.imageName %>" class="img-circle main-profile-image profile-small-pic"> </div>
                            <%})%>
                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                <tr>
                                    <td>Nickname:</td>
                                    <td><%=detailedUser.local.nickname%></td>
                                </tr>
                                <tr>
                                    <td>Battle.Net ID:</td>
                                    <td><%=detailedUser.local.battlenetid%></td>
                                </tr>

                                <tr>
                                <tr>
                                    <td>Race:</td>
                                    <td><%=detailedUser.local.race%></td>
                                </tr>
                                <tr>
                                    <td>Liga</td>
                                    <td><%=detailedUser.local.league%></td>
                                </tr>
                                <tr>
                                    <td>Rol</td>
                                    <td><%=detailedUser.local.role%></td>
                                </tr>
                                <tr>
                                    <td>Te putem ajuta?</td>
                                    <td><a href="mailto:turnee@starcraft2-vidcasts.ro">turnee@starcraft2-vidcasts.ro</a></td>
                                </tr>
                                </tr>
                                </tbody>
                            </table>
                            <a href="/send-message/<%= detailedUser._id %>" class="btn btn-primary">Trimite-i un mesaj</a>
                        </div>
                    </div>
                </div>
                <%if(user.local.role == 'admin'){%>
                    <a href="/backend-admin/<%=user._id%>">Inapoi la contul tau</a>
                <%}else if(user.local.role == 'Organizator'){%>
                    <a href="/backend-organizer/<%=user._id%>">Inapoi la contul tau</a>
                <%}else {%>
                    <a href="/backend-user/<%=user._id%>">Inapoi la contul tau</a>
                <%}%>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>
