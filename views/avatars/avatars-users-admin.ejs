<%include ../partials/header%>
<% include ../partials/sidebar-admin%>
<div id="page-wrapper">
    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header">Avatare cont utilizator</h1>
        </div>

        <ul class="nav nav-tabs" role="tablist" style="margin-top: 25px;">
            <li class="active"><a href="#terran" role="tab" data-toggle="tab">Terran</a></li>
            <li><a href="#zerg" role="tab" data-toggle="tab">Zerg</a></li>
            <li><a href="#protoss" role="tab" data-toggle="tab">Protoss</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade in active" id="terran">
                    <%if(terranAvatars.length == 0){%>
                    <p class="message-no-players-found">Nu am gasit avatare pentru Terran in baza de date!</p>
                    <%}else{%>
                        <%terranAvatars.forEach(function(avatar){%>
                        <div class="col-xs-6 col-md-2 container-user-avatar-admin">
                            <a href="#">
                                <img class="img-circle main-profile-image" src="<%= avatar.imagePath + '/' + avatar.imageName%>">
                            </a>
                            <div class="caption">
                                <h3></h3>
                                <p><a href="#" class="btn btn-success" role="button">Alege avatarul</a> <a href="#" class="btn btn-danger" role="button">Sterge</a></p>
                            </div>
                        </div>
                        <%});%>
                    <%}%>
            </div>
            <div class="tab-pane fade" id="zerg">
                <p>Zerg Avatars</p>
            </div>
            <div class="tab-pane fade" id="protoss">
                <p>Protoss Avatars</p>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer%>