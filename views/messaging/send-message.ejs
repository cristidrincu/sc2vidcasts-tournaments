<% include ../partials/header %>
<% tournaments.forEach(function(tournament){ %>
    <%if(user.local.role == 'admin'){%>
        <% include ../partials/sidebar-admin %>
    <%}else if(user.local.role == 'Organizator'){%>
        <% include ../partials/sidebar-organizer %>
    <%}else{%>
        <% include ../partials/sidebar %>
    <%}%>
<% }); %>

<script>
    tinymce.init({selector:'textarea'});
</script>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Compune un mesaj</h1>
        </div>
        <form action="/send-message/<%= player._id%>" method="post" role="form">
            <div class="col-lg-12">
                <div class="form-group">
                    <label for="messageSubject">Subiectul mesajului</label>
                    <input type="text" name="messageSubject" id="messageSubject" class="form-control" required/>
                </div>
                <div class="form-group">
                    <textarea rows="10" name="message"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Trimite mesajul"/>
                    <%if(user.local.role == 'admin'){%>
                        <a href="/backend-admin"><input class="btn btn-danger" value="Anuleaza"/></a>
                    <%}else if(user.local.role == 'Organizator'){%>
                        <a href="/backend-organizers"><input class="btn btn-danger" value="Anuleaza"/></a>
                    <%}else{%>
                        <a href="/backend-user"><input class="btn btn-danger" value="Anuleaza"/></a>
                    <%}%>
                </div>

            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>