<%include ../partials/header%>
    <% userAvatar.local.avatar.forEach(function(avatar){ %>
<% include ../partials/sidebar-admin%>
<%});%>


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-trophy fa-1x"></i> Citate</h1>
            <% if(errorMessage.length == 0 && successMessage == 0){%>
            <p class="alert-success"></p>
            <%} else if(errorMessage.length > 0) {%>
                <p class="alert-danger"><%= errorMessage%></p>
            <%} else {%>
                <p class="alert-success"><%= successMessage%></p>
            <%}%>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- /.panel -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-clock-o fa-fw"></i> Lista citate
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr>
                            <th>Autor</th>
                            <th>Citat</th>
                            <th>Editeaza</th>
                            <th>Sterge</th>
                        </tr>
                        <% quotes.forEach(function(quote){ %>
                            <tr>
                                <td><%= quote.quoteAuthor %></td>
                                <td><%= quote.quoteText %></td>
                                <td>
                                    <a class="btn btn-success" href="/edit-quote/<%=quote._id%>">Editeaza</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="/delete-quote/<%=quote._id%>">Sterge</a>
                                </td>
                            </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%include ../partials/footer%>