<div class="tab-pane fade in active" id="turnee-active-jucator">
    <% if(activeTournaments.length == 0){ %>
    <p class="message-no-players-found">Nu participi in cadrul vreunui turneu activ!</p>
    <% }else{ %>
    <div class="row">
        <div class="col-lg-12">
            <!-- /.panel -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-clock-o fa-fw"></i> Lista turnee
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-hover details-tournament-user">
                        <% if(activeTournaments.length == 0){ %>
                        <p>Momentan, nu esti inscris in cadrul vreunui turneu activ!</p>
                        <% }else{ %>
                        <tr>
                            <th>Numele turneului</th>
                            <th>Locuri disponibile</th>
                            <th>Editia</th>
                            <th>Data inceperii</th>
                            <th>Data terminarii</th>
                            <th>Premii</th>
                            <th>Detalii</th>
                            <th>Retrage-te din turneu</th>
                        </tr>
                        <% activeTournaments.forEach(function(tournament){ %>
                        <tr>
                            <td><%= tournament.tournamentName %></td>
                            <td><%= tournament.nrOfPlayers %></td>
                            <td><%= tournament.edition %></td>
                            <td><%= moment(tournament.startDate).format("DD MMMM YYYY") %></td>
                            <td><%= moment(tournament.endDate).format("DD MMMM YYYY") %></td>
                            <td>
                                <%= tournament.prize ? 'Da' : 'Nu' %>
                            </td>
                            <td>
                                <a class="btn btn-success" href="/tournament-details/<%= tournament._id %>/<%= user._id %>">
                                    <i class="fa fa-binoculars"></i> Afla mai multe
                                </a>
                            </td>
                            <td>
                                <form method="post"
                                      action="/retragere-din-turneu/<%= user._id %>/<%= tournament._id %> ">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-times fa-1x"></i> Confirma
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% })}; %>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>