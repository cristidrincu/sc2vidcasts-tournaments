<%include ../partials/header.ejs%>
<% userAvatar.local.avatar.forEach(function(avatar){%>

    <%if(user.local.role == 'User'){%>
        <% include ../partials/sidebar.ejs%>
    <%}else if(user.local.role == 'Organizator'){%>
        <% include ../partials/sidebar-organizer.ejs%>
    <%}else{%>
        <% include ../partials/sidebar-admin.ejs%>
    <%}%>

<%});%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><i class="fa fa-users fa-1x"></i> Organizatori</h1>
            <h4>Exista <%= organizers.length > 1 ? organizers.length + ' organizatori' : organizers.length + 'organizator'%> in baza de date</h4>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- /.panel -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-clock-o fa-fw"></i> Lista Organizatori
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr>
                            <th>Nickname</th>
                            <th>Battle.net ID</th>
                            <th>Rasa</th>
                            <th>Liga</th>
                            <th>Profil</th>
                        </tr>

                        <% organizers.forEach(function(organizer){ %>
                        <tr>
                            <td><%= organizer.local.nickname %></td>
                            <td><%= organizer.local.battlenetid %></td>
                            <td><%= organizer.local.race %></td>
                            <td><%= organizer.local.league %></td>
                            <td>
                                <%if(user._id.toString() === organizer._id.toString()){%>
                                <a href="/profile">
                                    <button class="btn btn-danger"><i class="fa fa-eye"></i> Profilul tau</button>
                                </a>
                                <%}else{%>
                                    <a href="/profile-details/<%= organizer._id %>">
                                        <button class="btn btn-success"><i class="fa fa-eye"></i> Detalii</button>
                                    </a>
                                <%}%>
                            </td>
                        </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<%include ../partials/footer.ejs%>