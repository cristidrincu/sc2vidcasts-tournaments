<% include ../../partials/header.ejs%>
<% include ../../partials/sidebar-edit-tournament.ejs%>

<div class="col-lg-4">
    <h4 class="info-editing-tournament-section">Modifica castigatorul acestui turneu</h4>
    <% if(errorMessage.length === 0){%>
    <p class="alert-success"><%= successMessage%></p>
    <%} else {%>
    <p class="alert-danger"><%= errorMessage%></p>
    <%}%>
    <div class="form-group">
        <p class="tournament-sponsors-status">Momentan, acest turneu <%= tournament.sponsors.length == 0 ? ' nu are sponsori' : ' are sponsori'%></p>
        <% if(tournament.sponsors.length > 0){%>
        <p><%= tournament.sponsors %></p>
        <%}%>
    </div>
    <div class="form-group">
        <form action="/tournament-sponsors/<%= tournament._id%>/<%= user._id%>" method="post">
            <label>Adauga sponsori pentru acest turneu</label>
            <input type="text" class="form-control add-sponsors" name="sponsors" value="<%= tournament.sponsors%>">
            <button type="submit" class="btn btn-warning btn-lg">Confirma schimbarile</button>
        </form>
    </div>
</div>

<% include ../../partials/advice-edit-tournament-basis.ejs%>
<% include ../../partials/footer.ejs%>