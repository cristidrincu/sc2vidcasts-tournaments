<% include ../../partials/header.ejs%>
<div class="container container-delete-quote">

    <div class="col-sm-6 col-sm-offset-3">
        <!-- Update FORM -->
        <form action="/delete-quote/<%=quote._id%>" method="post">
            <div class="form-group">
                <label>Quote Author</label>
                <input type="text" class="form-control" name="quoteAuthor" value="<%=quote.quoteAuthor%>" disabled>
            </div>
            <div class="form-group">
                <label>Update Quote Text</label>
                <textarea class="form-control" name="quoteText" rows="5" wrap="soft" disabled><%= quote.quoteText%></textarea>
            </div>
            <button type="submit" class="btn btn-success btn-lg">Sterge</button>
            <a href="/quotes-admin/<%= user._id%>" class="btn btn-danger btn-lg">Anuleaza</a>
        </form>
        <hr>
    </div>

</div>

<% include ../../partials/footer.ejs%>