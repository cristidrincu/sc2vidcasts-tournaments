<%include ../partials/header%>
<% include ../partials/sidebar-admin%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">

            <%if(errorDeleteAccountMessage.length == 0){%>
            <p style="color: green" id="successMessage"><%=successDeleteAccountMessage%></p>
            <%}else{%>
            <p style="color: red" id="errorMessage"><%=errorDeleteAccountMessage%></p>
            <%}%>

            <h1 class="page-header">Jucatori</h1>
            <h4>Exista <%= players.length > 1 ? players.length + ' jucatori' : players.length + ''%> in baza de date</h4>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- /.panel -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-clock-o fa-fw"></i> Lista jucatori
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr>
                            <th>Nickname</th>
                            <th>Battle.net ID</th>
                            <th>Rasa</th>
                            <th>Liga</th>
                            <th>Profil</th>
                            <th>Blacklist</th>
                            <th>Sterge contul</th>
                        </tr>

                        <% players.forEach(function(player){ %>
                        <tr>
                            <td><%= player.local.nickname %></td>
                            <td><%= player.local.battlenetid %></td>
                            <td><%= player.local.race %></td>
                            <td><%= player.local.league %></td>
                            <td>
                                <a href="/profile-details/<%= player._id %>">
                                    <button class="btn btn-success">Detalii</button>
                                </a>
                            </td>
                            <td>
                                <form action="/blacklist/<%= player._id %>" method="post">
                                    <button class="btn btn-primary">Adauga jucatorul in blacklist</button>
                                </form>

                            </td>
                            <td>
                                <form action="/delete-account/<%= player._id %>" method="post">
                                    <button class="btn btn-danger">Sterge contul</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<%include ../partials/footer%>