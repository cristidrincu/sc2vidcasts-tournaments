<%include ../partials/header.ejs%>
<% avatarUser.local.avatar.forEach(function(avatar){%>
    <% include ../partials/sidebar-admin.ejs%>
<%});%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Turnee organizate de <%= organizer.local.nickname%></h1>
            <h4>Exista <%= organizedTournaments.length > 1 || organizedTournaments.length == 0 ? organizedTournaments.length + ' turnee organizate de acest utilizator' : organizedTournaments.length + 'turneu organizat de acest utilizator'%></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-clock-o fa-fw"></i> Lista Turnee
                </div>
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr>
                            <th>Numele turneului</th>
                            <th>Locuri jucatori</th>
                            <th>Editie</th>
                            <th>Data inceperii</th>
                            <th>Date terminarii</th>
                            <th>Canal de chat in-game</th>
                            <th>Canal Twitch</th>
                            <th>Detalii</th>
                        </tr>
                        <% organizedTournaments.forEach(function(tournament){ %>
                            <tr>
                                <td><%= tournament.tournamentName %></td>
                                <td><%= tournament.nrOfPlayers %></td>
                                <td><%= tournament.edition %></td>
                                <td><%= moment(tournament.startDate).format("DD MMMM YYYY") %></td>
                                <td><%= moment(tournament.endDate).format("DD MMMM YYYY")%></td>
                                <td><%= tournament.ingameChatChannel%></td>
                                <td><a href="http://www.twitch.tv/<%= tournament.twitchStreamChannel%>" target="_blank"><%= tournament.twitchStreamChannel%></a></td>
                                <td><a class="btn btn-success" href="/tournament-details/<%= tournament._id%>/<%= user._id%>">Detalii</a></td>
                            </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<%include ../partials/footer.ejs%>