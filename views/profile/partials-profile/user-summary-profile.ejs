<%if(user.local.role == 'User'){%>
<div class="col-lg-4">
    <div class="panel div-gradient">
        <div class="panel-heading">
            <h3 class="panel-title">Toate detaliile despre turneele tale</h3>
            <p class="teaser-summary-category">Aici ai toate updaturile despre turneele in care participi sau ai participat!</p>
        </div>
        <div class="container-summary-information">
            <h1><%= detailedUser.local.tournaments.length %></h1>
            <p><%= detailedUser.local.tournaments.length == 0 || detailedUser.local.tournaments.length > 1 ? 'turnee' : 'turneu'%></p>
            <a class="btn btn-info" href="/user-tournaments/<%= detailedUser._id%>"><i class="fa fa-sitemap"></i> Turneele tale</a>
        </div>
    </div>
</div>
<%} else if(user.local.role == 'Organizator'){%>
<div class="col-lg-4">
    <div class="panel div-gradient">
        <div class="panel-heading">
            <h3 class="panel-title">Ai organizat pana acum...</h3>
            <p class="teaser-summary-category">Aici ai toate updaturile despre turneele pe care le-ai organizat!</p>
        </div>
        <div class="container-summary-information">
            <h1><%= organizerTournaments.length %></h1>
            <p><%= organizerTournaments.length == 0 || organizerTournaments.length > 1 ? 'turnee' : 'turneu'%></p>
            <a class="btn btn-info" href="/all-organizer-tournaments/<%= detailedUser._id%>"><i class="fa fa-sitemap"></i> Turneele tale</a>
        </div>
    </div>
</div>
<%}else{%>
<div class="col-lg-4">
    <div class="panel div-gradient">
        <div class="panel-heading">
            <h3 class="panel-title">Exista... </h3>
            <p class="teaser-summary-category">Aici ai toate updaturile despre turneele active!</p>
        </div>
        <div class="container-summary-information">
            <h1><%= tournamentsActive.length %></h1>
            <p><%= tournamentsActive.length == 0 || tournamentsActive.length > 1 ? 'turnee' : 'turneu'%></p>
            <a class="btn btn-info" href="/open-tournaments/<%= detailedUser._id%>"><i class="fa fa-trophy"></i> Turnee deschise</a>
        </div>
    </div>
</div>
<%}%>
<div class="col-lg-4">
    <div class="panel div-gradient-red">
        <div class="panel-heading">
            <h3 class="panel-title">Ai strans in inbox...</h3>
            <p class="teaser-summary-category">Mesaje de la prieteni, good news, bad news, blacklist...</p>
        </div>
        <div class="container-summary-information">
            <h1><%= messages.length %></h1>
            <p><%= messages.length == 0 || messages.length > 1 ? 'mesaje' : 'mesaj'%></p>

            <% if(messages.length == 0){%>
            <p class="no-messages">Pff... <i class="fa fa-frown-o"></i></p>
            <%} else {%>
            <a class="btn btn-info" href="/user-messages/<%= detailedUser._id%>">Mesajele tale</a>
            <%}%>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div class="panel div-gradient-green">
        <div class="panel-heading">
            <h3 class="panel-title">Incep in curand...</h3>
            <p class="teaser-summary-category">Turnee noi inseamna noi oportunitati de castig si distrugere in masa! Protoss, Zerg... nu conteaza</p>
        </div>
        <div class="container-summary-information">
            <h1><%= tournamentsActive.length%></h1>
            <p><%= tournamentsActive.length == 0 || tournamentsActive.length > 1 ? 'turnee' : 'turneu'%></p>
            <a class="btn btn-success" href="/open-tournaments/<%= detailedUser._id%>"><i class="fa fa-angle-double-up"></i> Upcoming</a>
        </div>
    </div>
</div>