<%include header%>
<div class="container" style="margin-top: 150px;">

    <div class="col-sm-6 col-sm-offset-3">
        <!-- Update FORM -->
        <form action="/customize-profile:<%=user.local.nickname%>" method="post">
            <div class="form-group">
                <label>Update Email</label>
                <input type="text" class="form-control" name="email" value="<%=user.local.email%>">
            </div>
            <div class="form-group">
                <label>Update Nickname</label>
                <input type="text" class="form-control" name="nickname" value="<%=user.local.nickname%>">
            </div>
            <div class="form-group">
                <label>Modifica rasa cu care joci</label>
                <input type="text" class="form-control" name="race" value="<%=user.local.race%>">
            </div>
            <div class="form-group">
                <label>Modifica liga din care faci parte</label>
                <input type="text" class="form-control" name="league" value="<%=user.local.league%>">
            </div>
            <button type="submit" class="btn btn-success btn-lg">Update</button>
            <a href="/profile">
                <button type="submit" class="btn btn-danger btn-lg">Anuleaza</button>
            </a>
        </form>
        <hr>
    </div>

</div>

<%include footer%>