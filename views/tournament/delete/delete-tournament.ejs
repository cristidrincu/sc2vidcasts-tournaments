<%include ../../partials/header.ejs%>
    <% userAvatar.local.avatar.forEach(function(avatar){ %>
        <% include ../../partials/sidebar-admin.ejs%>
    <%});%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 container-delete-message">
            <img src="/images/delete-icon-elements/psd-delete-icon.png" alt="Delete Warning"/>
            <h1 class="info-title-delete-tournament">Vei sterge turneul &quot; <i><%= tournament.tournamentName%></i> &quot; <br/>cu urmatoarele proprietati:</h1>
            <div class="col-sm-4 col-md-4 col-lg-4 container-delete-tournament-details">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-info fa-fw"></i> Informatii generale
                    </div>
                    <div class="panel-body container-text-delete-tournament">
                        <ul>
                            <li>Numar de locuri: <%= tournament.nrOfPlayers%></li>
                            <li>Jucatori inscrisi: <%= tournament.players.length%></li>
                            <li>Editia: <%= tournament.edition%></li>
                            <li>Organizator: <%= tournament.organizer[0].local.nickname%></li>
                            <li>Data inceperii: <%= moment(tournament.startDate).format('DD-MM-YY')%></li>
                            <li>Data terminarii: <%= moment(tournament.endDate).format('DD-MM-YY')%></li>
                            <li>Ora de incepere: <%= tournament.startHour%></li>
                            <li>Canal de chat: <%= tournament.ingameChatChannel%></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4 container-delete-tournament-details">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-trophy fa-fw"></i> Castigator turneu
                    </div>
                    <div class="panel-body container-text-delete-tournament delete-tournament-winner">

                            <%if(tournament.winner[0] == undefined){%>
                                <h3>Nu a fost declarat</h3>
                            <%}else{%>
                                <img src="/images/trophy/tournament-trophy.jpg" width="100" height="116"/>
                                <h3><%= tournament.winner[0].local.nickname%></h3>
                            <%}%>

                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4 container-delete-tournament-details">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-file-text fa-fw"></i> Descriere turneu
                    </div>
                    <div class="panel-body container-text-delete-tournament">
                        <p><%= tournament.description%></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="last-warning">
        <h3>Esti sigur ca doresti sa faci acest lucru?</h3>
        <form method="post" action="/delete-tournament/<%=tournament._id%>/<%=user._id%>">
            <ul class="delete-tournament-buttons">
                <li><button class="btn btn-danger" type="submit">Sterge turneul</button></li>
                <li><a class="btn btn-success" href="/closed-tournaments/<%= user._id%>">Anuleaza</a> </li>
            </ul>
        </form>
    </div>
</div>


<% include ../../partials/footer.ejs %>