<% include header %>

<%
    var races = ['Terran', 'Zerg', 'Protoss'];
    var leagues = ['Bronze', 'Silver', 'Gold', 'Platinum', 'Diamond', 'Master', 'Grand Master'];
%>
<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
                <label>Nickname</label>
                <input type="text" class="form-control" name="nickname">
            </div>
            <div class="form-group">
                <label>Battle.net ID (fara #)</label>
                <input type="text" class="form-control" name="battlenetid">
            </div>
            <div class="form-group">
                <label>Rasa cu care joci</label>
                <select class="form-control" name="race">
                    <% for (var i=0; i<races.length; i++){%>
                    <option value="<%=races[i]%>"><%=races[i]%></option>
                    <%}%>
                </select>
            </div>
            <div class="form-group">
                <label>Liga din care faci parte</label>
                <select class="form-control" name="league">
                    <%for (var i = 0; i<leagues.length; i++){%>
                    <option value="<%=leagues[i]%>"><%=leagues[i]%></option>
                    <%}%>
                </select>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Signup</button>
        </form>
        <hr>
        <p>Ai deja un cont? <a href="/login">Login</a></p>
        <p>Sau mergi la <a href="/">pagina principala</a>.</p>
    </div>
</div>

<% include footer %>