<%include ../partials/header.ejs%>
<%tournaments.forEach(function(tournament){%>
<% include ../partials/sidebar%>
<%});%>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Lista turneelor in care te-ai inscris</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <!-- /.panel -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-clock-o fa-fw"></i> Lista turnee
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr>
                            <th>Numele turneului</th>
                            <th>Locuri disponibile</th>
                            <th>Editia</th>
                            <th>Data inceperii</th>
                            <th>Data terminarii</th>
                            <th>Premii</th>
                            <th>Detalii</th>
                        </tr>

                        <% playerTournaments.forEach(function(tournament){ %>
                        <tr>
                            <td><%= tournament.tournamentName %></td>
                            <td><%= tournament.nrOfPlayers %></td>
                            <td><%= tournament.edition %></td>
                            <td><%= moment(tournament.startDate).format("DD MMMM YYYY") %></td>
                            <td><%= moment(tournament.endDate).format("DD MMMM YYYY") %></td>
                            <td>
                                <%= tournament.prize ? 'Da' : 'Nu'%>
                            </td>
                            <td>
                                <a href="/tournament-details/<%= tournament._id %>">
                                    <button class="btn btn-danger">Detalii</button>
                                </a>
                            </td>
                        </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


<% include ../partials/footer %>